<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demo.plugin.location.LocationMapActivity">

    <fragment
        class="com.kt.maps.GMapFragment"
        android:id="@+id/locationMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:visibility="gone"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:onClick="onCompassToNorth"
        android:id="@+id/sampleMapCompass"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bt_north_pin" />

    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/btn_last_location"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:onClick="onAnimateLastLocation"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
</RelativeLayout>