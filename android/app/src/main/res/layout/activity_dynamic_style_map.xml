<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demo.plugin.style.DynamicStyleMapActivity">


    <fragment
        android:layout_weight="1"
        class="com.kt.maps.GMapFragment"
        android:id="@+id/dynamicStyleMap"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:text="@string/color_r"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:id="@+id/colorRValue"
            android:max="255"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:text="@string/color_g"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:id="@+id/colorGValue"
            android:max="255"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:text="@string/color_b"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:id="@+id/colorBValue"
            android:max="255"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>


</LinearLayout>