<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
		android:id="@+id/label_partial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Partial import ------ " />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter absolute path of directory containging data files : " />

        <EditText
            android:id="@+id/root_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="text"
            android:text="" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/start_import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Import" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Cancel" />
    
    <TextView
		android:id="@+id/label_whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Full import ------ " />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter absolute path of db file : " />

        <EditText
            android:id="@+id/file_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="text"
            android:text="telos/tempDb/replace_test.db" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/start_replace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Replace" />
	
	<TextView
		android:id="@+id/label_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Storage Clear ------ " />
	
	<Button
        android:id="@+id/start_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Clear" />
</LinearLayout>